# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI API Configuration (for Create Song Feature)
# OpenAI API Key for lyrics generation and TTS voice
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Text-to-Speech (TTS) APIs (choose one or more)
# ElevenLabs - High-quality voice generation - https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Cloud TTS - Multi-language support - https://cloud.google.com/text-to-speech
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here

# Azure Neural TTS - Enterprise-grade TTS - https://azure.microsoft.com/en-us/services/cognitive-services/text-to-speech/
AZURE_TTS_API_KEY=your_azure_tts_api_key_here
AZURE_TTS_REGION=eastus

# Music Generation APIs (choose one or more)
# Suno API - https://www.suno.ai/
SUNO_API_KEY=your_suno_api_key_here

# Riffusion API (if using hosted service)
RIFFUSION_API_KEY=your_riffusion_api_key_here

# Stable Audio API - https://stableaudio.com/
STABLE_AUDIO_API_KEY=your_stable_audio_api_key_here

# Optional: For production deployments
# NEXT_PUBLIC_CDN_URL=your_cdn_url
# SENTRY_DSN=your_sentry_dsn
